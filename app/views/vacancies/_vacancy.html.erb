<tr>
  <td class="vacancy">
    <span class="title"><%= link_to vacancy.title, vacancy %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(vacancy.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(vacancy.user) %>
  <td>
    <%= link_to "delete", vacancy, :method => :delete, :confirm => "You sure?", :title => vacancy.title %>
  </td>
  <% else %>
  <td></td>>
  <% end %>  
</tr> 