<li>
  <span class="vacancy">
    <span class="title"><%= @vacancy.title %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(@vacancy.created_at) %> ago! <br />
    </span>
    <span class="text">
      <%= @vacancy.text %> 
    </span>
  </span>
  <% user = vacancy.user rescue User.find(1) %>
  <% if current_user?(user) %>
 
  <span>
    <%= link_to "delete", vacancy, :method => :delete, :confirm => "You sure?", :title => "Delete #{vacancy.title}" %>
  </span>
  <% end %>
  
</li>