<%= form_for @vacancy do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
  	<%= f.label :title %><br />
    <%= f.text_area :title %>
  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </div>
  <div class="field">
    <%= f.label :active_unit %><br />
    <%= f.text_field :active_unit %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>